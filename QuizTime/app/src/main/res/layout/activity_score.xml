<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elena.quiztime.ui.ScoreActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/score_text"
            android:layout_weight="1.5"
            android:gravity="bottom|center_horizontal"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="35sp"
            tools:text="You scored : 900"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/best_score_text"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"
            android:textSize="24sp"
            tools:text= "Current best : 1300"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <fragment
        android:layout_alignParentBottom="true"
        tools:layout = "@layout/fragment_footer"
        android:id="@+id/fragment_footer"
        android:name="com.example.elena.quiztime.fragments.FooterFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
